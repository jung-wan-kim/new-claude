{
  "name": "claude-code-controller",
  "version": "0.1.0",
  "description": "A terminal-based Claude Code controller with intelligent task management",
  "main": "dist/index.js",
  "bin": {
    "ccc": "./dist/index.js"
  },
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test:mcp": "tsx src/test/test-mcp-connection.ts",
    "test:mcp:real": "tsx src/test/test-real-mcp.ts",
    "ci": "npm run lint && npm run typecheck && npm run test"
  },
  "keywords": [
    "claude",
    "ai",
    "terminal",
    "tui",
    "mcp",
    "automation"
  ],
  "author": "Jung-wan Kim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jung-wan-kim/new-claude.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/blessed": "^0.1.25",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
