{
  "name": "claude-code-controller",
  "version": "0.1.0",
  "description": "A macOS terminal application that wraps Claude Code CLI with intelligent task management",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"wait-on tcp:5173 && npm run dev:electron\"",
    "dev:main": "tsc-watch -p tsconfig.main.json --onSuccess \"echo Main process compiled\"",
    "dev:renderer": "vite",
    "dev:electron": "electron .",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:preload": "tsc src/main/preload.ts --outDir dist/main --module commonjs --target es2020",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "claude",
    "ai",
    "terminal",
    "mcp",
    "automation",
    "macos"
  ],
  "author": "Jung-wan Kim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jung-wan-kim/new-claude.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "electron-store": "^8.1.0",
    "ink": "^3.2.0",
    "ink-select-input": "^4.2.2",
    "ink-text-input": "^4.0.3",
    "node-pty": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.claudecodecontroller.app",
    "productName": "Claude Code Controller",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}